<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <nav>
    <a href="/">Home</a> |
    <a href="/about">About</a> |
    <a href="/workouts/search">Search</a> |
    <a href="/workouts/add-workout">Add Workout</a>
  </nav>
  <h1><%= title %></h1>
  <% if (!items || items.length === 0) { %>
    <p>No workouts found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Date</th><th>User</th><th>Type</th><th>Duration</th><th>Intensity</th><th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(i => { %>
          <tr>
            <td><%= i.date.toISOString ? i.date.toISOString().slice(0,10) : i.date %></td>
            <td><%= i.username || i.user_id %></td>
            <td><%= i.type %></td>
            <td><%= i.duration_minutes %> min</td>
            <td><%= i.intensity %></td>
            <td><%= i.notes %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
  
</body>
</html>
